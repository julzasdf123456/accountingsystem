<AnchorPane fx:id="anchorPane" prefHeight="694.0" prefWidth="1027.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boheco1.dev.integratedaccountingsystem.warehouse.ViewMIRSForApprovalController">
