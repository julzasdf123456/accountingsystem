                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="16.0" />
                           </HBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="remarks" focusColor="#00ad8e" labelFloat="true" prefHeight="30.0" prefWidth="419.0" promptText="Remarks">
